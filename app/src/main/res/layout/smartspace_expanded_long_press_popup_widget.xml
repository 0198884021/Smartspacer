<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smartspace_long_press_popup_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_long_press_popup_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:icon="@drawable/ic_reset"
        app:iconTint="?android:textColorPrimary"
        app:iconPadding="@dimen/margin_16"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/margin_16"
        android:minHeight="@dimen/smartspace_long_press_popup_item_height"
        android:paddingStart="@dimen/smartspace_dismiss_margin"
        android:paddingEnd="@dimen/smartspace_dismiss_margin"
        android:textColor="?android:textColorPrimary"
        android:text="@string/expanded_widget_reset_title"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup"
        tools:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup.Preview" />

</LinearLayout>